<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="a46elks.a46elksapp">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.SEND_SMS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/elk_launcher_icon"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:screenOrientation="portrait">
        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".introductionGuide.AccountCreationActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".tabLayout.TabLayoutActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".introductionGuide.IntroTabLayoutActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".tabLayout.Messages.CreateMessageActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".tabLayout.Messages.EditMessageActivity"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".LoginActivity2"
            android:label="@string/title_activity_login2" />
        <activity android:name=".tabLayout.Contacts.CreateContactActivity" />
        <activity android:name=".tabLayout.Contacts.EditContactActivity" />
        <activity android:name=".tabLayout.Groups.CreateGroupActivity" />
        <activity android:name=".tabLayout.Groups.EditGroupActivity"></activity>
    </application>

</manifest>